[core]
	editor = nvim
[alias]
	st = status -bsu
	last = log -1
	unstage = reset HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ck = checkout
    br = branch
    cm = commit
    cmm = commit -m
	wk = worktree
	sync= !git add -A && git status && git commit -m \""sync: $(date '+%Y-%m-%d %H:%M')"\"
